                    </div>
                    <div class="footerb2">
                        <a href="">About</a>
                        <a href="">Job</a>
                        <a href="">Docs</a>
                    </div>
                    <div class="footerb3">
                        <a href="">Term and Conditions</a>
                        <a href="">Privacy Policy</a>
                        <a href="">Cookie Policy</a>
                    </div>
                    <div class="footerb4">
                        <h5>Let's Chat!</h5>
                        <small>nitishjsr7209@gmail.com</small>
                    </div>
                </div>
            </div>
    </div>

    <script>
        function date() {
            var element = document.querySelectorAll("#date");
            element.forEach(function (date) {
                let originalDate = date.innerText;
                let parts = originalDate.split("-");
                let modifiedDate = parts.reverse().join("-");
                date.innerText = modifiedDate;
            })
        }
        date()

        function alerts(){
           var alertcmt =  document.querySelectorAll("#alert")
            alertcmt.forEach(function(ale){
                ale.addEventListener("click", function(){
                    alert("working on it...")
                })
            })
        }
        alerts()

        function alreadybuy(){
           var buyalert =  document.querySelectorAll("#alreadybuy")
            buyalert.forEach(function(msg){
                msg.addEventListener("click", function(){
                    alert("You have already purchase this courses!")
                })
            })
        }
        alreadybuy()
    </script>
</body>
</html>