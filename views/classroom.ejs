<body>
    <div id="main">
        <% include ../partials/nav.ejs %>
            <div id="page1">

                <div class="slider-container">
                    <div class="slider">
                        <% loginuser.buycources.forEach(function(buycourses){ %>
                            <div class="course">
                                <a href="/coursesDetailes/<%=buycourses.coursestittle %>">
                                    <div class="coursesimg">
                                        <img src="/getCourses/<%=buycourses.thumnail %>" alt="">
                                    </div>
                                </a>
                                <a href="/coursesDetailes/<%=buycourses.coursestittle %>">
                                    <div class="coursesname">
                                        <h3>
                                            <%= buycourses.coursestittle %>
                                        </h3>
                                    </div>
                                </a>
                                <div>
                                    <h4 style="font-size: 2.5vh; font-weight: 500;"> Started on <span style="font-size: 2vh; font-weight: 400;" id="date"><%=buycourses.date %></h4></span>
                                </div>
                                <div id="btn">
                                    <button id="alreadybuy" style="background-color: #14BB7F;">Paid</button>
                                    <button id="alert" style="background-color: #0085FF;">Watch Recoded</button>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
            <div id="footer">
                <div id="footertop">
                    <div id="footertopleft">
                        <div class="brandname">
                           <div class="logo"></div>
                           <h4>BrainBoost</h4>
                        </div>
                        <div id="email">
                            <input type="text" placeholder=" Your Email">
                            <h3>Start Your Learning Journey</h3>
                        </div>
                    </div>
                </div> 
                <div id="footerbottom">
                    <div class="footerb1">
