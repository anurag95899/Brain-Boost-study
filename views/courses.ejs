                                </a>
                            </div>
                            <div class="btn">
                                <% if(loginuser.admin===true){ %>
                                    <a href="/editcourse/<%= courses._id %>">
                                        <h5><button
                                               >Edit</button>
                                        </h5>
                                    </a>
                                    <% } else { %>
    
                                        <% } %>
                                        <% if(loginuser.admin===true){ %>
                                            <a href="/deletecourse/<%= courses._id %>">
                                                <h5><button
                                                      >Delete</button>
                                                </h5>
                                            </a>
                                            <% } else { %>
            
                                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
