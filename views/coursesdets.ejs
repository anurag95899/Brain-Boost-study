<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= coursesdetailes.coursestittle%>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link rel="stylesheet" href="../stylesheets/coursesdet.css">
</head>
<body>
    <div class="modal fade mt-5" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div style="background-color: rgb(78, 78, 78); padding: 10px;" class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Module</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/module/<%=coursesdetailes._id %>" method="post">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Module Name</label>
                            <input type="text" name="module" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Module Name">
                        </div>
                        <button type="submit" class="btn btn-primary">Add Module</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="main">

        <% include ../partials/nav.ejs %>
            <div id="page1">
                <div id="coursesimage">
                    <div id="image">
                        <img src="/getCourses/<%=coursesdetailes.thumnail %>" alt="">
                    </div>
                </div>
                <div id="coursesdets">
                    <h2>[LIVE]<%=coursesdetailes.coursestittle%>
                    </h2>
                    <h3>
                        <%= coursesdetailes.coursesdes %>
                    </h3>
                    <div id="coursesfetures">
                        <div class="coursesfetures">Live courses</div>
                        <div class="coursesfetures">
                            <%= coursesdetailes.totalnoofclasses%> classes
                        </div>
                        <div class="coursesfetures">Started on <%=coursesdetailes.date%>
                        </div>
                        <div class="coursesfetures">Recording Available</div>
                    </div>
                    <div id="price">
                        <h5
                            style="text-decoration: line-through; text-decoration-color: red;text-decoration-thickness: 3px;">
                            ₹<%= coursesdetailes.price %>
                        </h5>
                        <h5>₹<%= coursesdetailes.actualprice %>
                        </h5>
                    </div>
                    <div id="paid">
                        <% if(loginuser.buycources.indexOf(coursesdetailes._id)===-1){ %>
                            <button id="rzp-button1" style="border: none;">
                                <h5>Paid</h5>
                            </button>
                            <% } else{ %>
                                <button style="border: none;">
                                    <h5>Start Learning</h5>
                                </button>
                                <% } %>
                                    <h5>Watch trailer</h5>
                    </div>
                    <div id="coursesdetailes">
                        <h4>Details</h4>
                        <h5>
                            <%= coursesdetailes.coursesdetails %>
                        </h5>
                    </div>
                </div>
            </div>
            <div id="page2">
                <div style="display: flex; align-items: center; justify-content: space-between;" class="Whattolearn">
                    <div style="display: flex; align-items: center; gap:30px">
                        <h1>What you'll Learn</h1>
                        <h5>
                            <%=coursesdetailes.allmodules.length %> Modules
                        </h5>
                    </div>
                    <% if(loginuser.admin===true){ %>
                        <button style="border: none;" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <h5
                                style="border: 1px solid #000; padding: 1vh; font-size: 2vh; border-radius: 10px; background-color: #000; color: #fff; font-family: gilroy;">
                                Add Modules</h5>
                        </button>
                        <% } %>
                </div>
                <div class="learndetails">
                    <div class="detils">
                        <% coursesdetailes.allmodules.forEach(function(modules){ %>
                            <summary style="justify-content: space-between; position: relative;">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <h4 id="summerpart2">
                                        <%= modules.module%>
                                    </h4>
                                </div>
                                <% if(loginuser.admin===true){ %>
                                    <div style="display: flex; align-items: center;gap: 20px;">
                                        <a href="/editmodule/<%=modules._id %>">
                                            <h6 class="btn btn-outline-warning">Edit</h6>
                                        </a>
                                        <a href="/deletemodule/<%=modules._id %>">
                                            <h6 class="btn btn-outline-danger">Delete</h6>
                                        </a>
                                    </div>
                                    <% } %>
                            </summary>
                            <% }) %>
                    </div>
                </div>

            </div>
            <div id="footer">
                <div id="footertop">
                    <div id="footertopleft">
                        <div class="brandname">
                            <div class="logo"></div>
                            <h4>BrainBoost</h4>
                        </div>
                        <div id="email">
                            <input type="text" placeholder=" Your Email">
                            <h3>Start Your Learning Journey</h3>
                        </div>
                    </div>
                </div>
                <div id="footerbottom">
                    <div class="footerb1">
                        <h2>BrainBoost</h2>
                        <h5>Lorem ipsum dolor sit amet consectetur adipisicing elit. Deserunt, odit?</h5>
                    </div>
                    <div class="footerb2">
                        <a href="">About</a>
                        <a href="">Job</a>
                        <a href="">Docs</a>
                    </div>
                    <div class="footerb3">
                        <a href="">Term and Conditions</a>
                        <a href="">Privacy Policy</a>
                        <a href="">Cookie Policy</a>
                    </div>
                    <div class="footerb4">
                        <h5>Let's Chat!</h5>
                        <small>nitishjsr7209@gmail.com</small>
                    </div>
                </div>
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

    <script>
        var gotop = document.getElementById("gotop");
        gotop.addEventListener("click", function () {
            window.scroll({
                top: 0,
                left: 0,
                behavior: "smooth"
            });
        });
    </script>
    <!-- Razrtpay payment gatway -->
    <script>

        var orderId;
        $(document).ready(function () {
            var settings = {
                "url": "/create/orderId/<%= coursesdetailes._id %>",
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Content-Type": "application/json"
                }
            };
            //creates new orderId everytime
            $.ajax(settings).done(function (response) {

                orderId = response.id;
                console.log(orderId);
                $("button").show();
                var options = {
                    "key": "rzp_test_XClQ5fq0NJNtwe", // Enter the Key ID generated from the Dashboard
                    "amount": response.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                    "currency": "INR",
                    "name": "Demon_knight",
                    "description": "Test Transaction",
                    "image": "../images/attachment_58846331.png",
                    "order_id": response.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                    "handler": function (response) {
                        alert(response.razorpay_payment_id);
                        alert(response.razorpay_order_id);
                        alert(response.razorpay_signature)


                        var settings = {
                            "url": "/api/payment/verify",
                            "method": "POST",
                            "timeout": 0,
                            "headers": {
                                "Content-Type": "application/json"
                            },
                            "data": JSON.stringify({ response }),
                        }
                        $.ajax(settings).done(function (response) {
                            if (response.signatureIsValid === 'true') {
                                var courseId = "<%= coursesdetailes._id %>"; // Retrieve the course ID
                                addCourseToUser(courseId);
                                location.reload();
                            }
                            else {
                                alert("failed")
                            }
                        })

                    },
                    "prefill": {
                        "name": "<%= loginuser.name %>",
                        "email": "<%=loginuser.email %>",
                        "contact": "<%=loginuser.whatsappnumber%>"
                    },
                    "notes": {
                        "address": "Razorpay Corporate Office"
                    },
                    "theme": {
                        "color": "#3399cc"
                    }
                };
                var rzp1 = new Razorpay(options);
                rzp1.on('payment.failed', function (response) {
                    alert(response.error.code);
                    alert(response.error.description);
                    alert(response.error.source);
                    alert(response.error.step);
                    alert(response.error.reason);
                    alert(response.error.metadata.order_id);
                    alert(response.error.metadata.payment_id);
                });
                document.getElementById('rzp-button1').onclick = function (e) {
                    rzp1.open();
                    e.preventDefault();
                }
            });
        });

        function addCourseToUser(courseId) {
            var settings = {
                "url": "/add/course/" + courseId,
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Content-Type": "application/json"
                }
            };

            $.ajax(settings).done(function (response) {
                console.log(response);
            });
        }

    </script>
</body>
</html>